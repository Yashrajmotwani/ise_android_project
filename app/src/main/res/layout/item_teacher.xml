<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Teacher Image -->
        <ImageView
            android:id="@+id/teacherImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_face_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Teacher Image"
            android:scaleType="centerCrop" />

        <!-- Teacher Name -->
        <TextView
            android:id="@+id/teacherName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Teacher Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/teacherImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"/>

        <!-- Department -->
        <TextView
            android:id="@+id/discipline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discipline"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/teacherName"
            app:layout_constraintStart_toEndOf="@id/teacherImage"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <!-- Posting Date -->
        <TextView
            android:id="@+id/postingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posting Date"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/discipline"
            app:layout_constraintStart_toEndOf="@id/teacherImage"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <!-- Email ID -->
        <TextView
            android:id="@+id/emailID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/postingDate"
            app:layout_constraintStart_toEndOf="@id/teacherImage"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <!-- Department -->
        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/emailID"
            app:layout_constraintStart_toEndOf="@id/teacherImage"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
